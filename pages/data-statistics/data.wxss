.container{
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0;
}
.basic-data{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 20rpx;
  border-style: solid;
  border-radius: 10px;
  border-color: seashell;
  background-color: seashell;
  justify-content: space-between;
}

