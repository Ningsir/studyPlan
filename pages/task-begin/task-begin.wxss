/* pages/task-begin/task-begin.wxss */
.time-item {
  color: #fff;
  font-size: 40px;
}

.container {
  position: relative;
  display: flex;
  padding: 0;
  width: 100%;
  height: 100%;
}

.task-begin-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

page {
  height: 100%;
}

.some-words {
  /* padding: 50rpx; */
  padding-left: 50rpx;
  padding-right: 50rpx;
  font-size: 25px;
  color: white;
}

.progress-bar {
  color: blue;
}

.count-down-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.timer-wrapper {
  position: absolute;
}

.progress-wrapper {
  height: 100%;
  width: 100%;
}

.control-button {
  display: flex;
  flex: row;
  width: 80%;
  justify-content: space-around;
}
