/* pages/login/login.wxss */
page{
  height: 100%;
}
.login{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}

.user_btn {
  position: absolute;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  transform: translateX(-50%);
  top: 25%;
  border: 1rpx solid #0087FD;
  color: #0087FD;
  font-size: 38rpx;
  text-align: center;
}
.image_btn {
  position: absolute;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  transform: translateX(-50%);
  top: 0%;
  border: 1rpx solid #0087FD;
  color: #0087FD;
  font-size: 38rpx;
  text-align: center;
}

.login_btn{
  margin: 40rpx;
  position: absolute;
  bottom: 200rpx;
  left: 200rpx;
  background-color: #0087FD;
  color: aliceblue;
}

.diary_bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title{
  position: absolute;
  top: 100rpx;
  left: 200rpx;
  font-size: 30px;
  color: white;
}
